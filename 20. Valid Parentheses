//20. Valid Parentheses-stack-easy
class Solution {
    public boolean isValid(String s) {
        Stack<Character> st=new Stack<>();
        for(int i=0;i<s.length();i++){
            char ch=s.charAt(i);
            if(!st.isEmpty()){
                char last=st.peek();
                if(ispair(last,ch)){
                    st.pop();
                    continue;
                }
            }st.push(ch);
        }return st.isEmpty();
    }
    boolean ispair(char last,char cur){
        return (last=='(' && cur==')') || (last=='{' && cur=='}') || (last=='[' && cur==']');
    }
}
