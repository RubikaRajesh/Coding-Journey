//1095. Find in Mountain Array- binary search - hard

class Solution {
    public int findInMountainArray(int target, MountainArray arr) {
         int start=0;
        int end=arr.length()-1;
        while(start<end){
            int mid=start+(end-start)/2;
            if(arr.get(mid)>arr.get(mid+1)){
                end=mid;
            }
            else if(arr.get(mid)<arr.get(mid+1)){
                start=mid+1;
            }
        } 
       int ans=binarysearch(arr,target,0,start,true);
       if(ans==-1){
        return binarysearch(arr,target,start,arr.length()-1,false);
       }return ans;
    }
    public int binarysearch(MountainArray arr,int target,int start,int end,boolean isAsc){
        while(start<=end){
            int mid=start+(end-start)/2;
            if(arr.get(mid)==target){
                return mid;}
            if(isAsc){
            if(arr.get(mid)>target){
                end=mid-1;
            }
            else{
                start=mid+1;
            }}
            else{
                 if(arr.get(mid)<target){
                end=mid-1;
            }
            else{
                start=mid+1;
            }}
        }return -1;
    }
}

